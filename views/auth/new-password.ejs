<%-include("../includes/head.ejs")%>

</head>
<body>
<section>
    <!-- page header -->
    <div class="main-flex my-4 px-4 ">
        <div><img class="w-3" src="images/close.png" alt=""></div>
        <div class="main-header">Reset</div>
        <div class="main-link"><a href="/login">Login</a></div>
    </div>
    <form class="p-4" action="/setNewPassword" method="post">
        <div class="flex flex-col mb-8">
        <input type="text" class="main-input" name="password" placeholder="Password">
        <input type="text" class="main-input" name="confirmPassword" placeholder="Confirm password">
        <input type="hidden" name="passwordToken" value="<%=passwordToken%>">
        <input type="hidden" name="userId" value="<%=userId%>">
    </div>
    <div class="flex flex-col items-center">
        <button type="submit" class="main-button bg-main text-white" >Reset</button>
        </div>
    </form>
</section>
<%-include("../includes/end.ejs")%>
